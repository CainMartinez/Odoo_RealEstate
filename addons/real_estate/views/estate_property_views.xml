<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties" decoration-success="state == 'sold'" 
                  decoration-danger="state == 'canceled'" 
                  decoration-info="state == 'offer_accepted'"
                  decoration-warning="state == 'offer_received'">
                <field name="name" string="Title"/>
                <field name="property_type_id" string="Type" optional="show"/>
                <field name="postcode" optional="hide"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms" optional="show"/>
                <field name="living_area" string="Area" optional="show"/>
                <field name="expected_price" string="Expected" optional="show"/>
                <field name="selling_price" string="Selling" optional="show"/>
                <field name="date_availability" string="Available" optional="hide"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Property Name..." class="o_text_overflow"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': False}" placeholder="Add tags..."/>
                    </div>
                    <group>
                        <group string="Location &amp; Availability">
                            <field name="property_type_id" options="{'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group string="Financial Information">
                            <field name="expected_price"/>
                            <field name="selling_price" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <group>
                                <group string="General Information">
                                    <field name="description" placeholder="Add property description..."/>
                                    <field name="bedrooms"/>
                                    <field name="living_area" string="Living Area (sqm)"/>
                                    <field name="facades"/>
                                </group>
                                <group string="Outdoor Features">
                                    <field name="garage" widget="boolean_toggle"/>
                                    <field name="garden" widget="boolean_toggle"/>
                                    <field name="garden_area" string="Garden Area (sqm)" invisible="not garden"/>
                                    <field name="garden_orientation" invisible="not garden"/>
                                </group>
                            </group>
                        </page>
                        <page string="Offers" name="offers">
                            <field name="offer_ids">
                                <list string="Property Offers" editable="bottom">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="status"/>
                                    <!-- <field name="property_id" column_invisible="1"/> -->
                                </list>
                            </field>
                        </page>
                        <page string="Other Info" name="other_info">
                            <group>
                                <field name="seller_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <separator/>
                <filter string="Available" name="available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Property Type" name="property_type" context="{'group_by': 'property_type_id'}"/>
                <filter string="Postcode" name="postcode" context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>
</odoo>
